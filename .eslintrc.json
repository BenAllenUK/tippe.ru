{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": [
            "off",
            2
        ],
        "linebreak-style": [
            "off",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars":[
          "warn"
        ],
        "no-console":[
          "warn"
        ],
        "no-mixed-spaces-and-tabs":[
          "off"
        ],
        "no-useless-escape": [
          "off"
        ]
    }
}
