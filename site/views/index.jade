extends layout

block content


  #listView
    p(style="font-size: 12px; text-align:center;color:#b5b5b5;") New here? - Try adding a post by clicking the red button in the corner.
    a(class="waves-effect waves-light btn-flat posts-refresh", onClick=('onRefresh()'))
      svg(fill='#000000', height='40', viewbox='0 0 24 24', width='40', xmlns='http://www.w3.org/2000/svg')
        path(d='M17.65 6.35C16.2 4.9 14.21 4 12 4c-4.42 0-7.99 3.58-7.99 8s3.57 8 7.99 8c3.73 0 6.84-2.55 7.73-6h-2.08c-.82 2.33-3.04 4-5.65 4-3.31 0-6-2.69-6-6s2.69-6 6-6c1.66 0 3.14.69 4.22 1.78L13 11h7V4l-2.35 2.35z')
        path(d='M0 0h24v24H0z', fill='none')

    .posts
      #postsMain
        .card
          .posts-empty Loading...

  #itemView(style="display: none;opacity:0;").itemView

    #post.posts
      .card
        .posts-empty Loading...

  a(onclick='createPost()').btn-floating.btn-large.waves-effect.waves-light.red
    svg(fill='#FFF', height='30', style="margin-top: 12px", viewbox='0 0 24 24', width='30', xmlns='http://www.w3.org/2000/svg')
      path(d='M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z')
      path(d='M0 0h24v24H0z', fill='none')
  #createModal.modal
    .modal-content
      h4 Create post
      input(placeholder="Title", type="text", class="validate", id="input-title")

      label(for="textarea1") Post content
      textarea#textarea1.materialize-textarea

      .canvasOverlay
        .canvasColours
          .canvasColour(style="background:red;", onclick='onColourClick("red")')
          .canvasColour(style="background:blue;", onclick='onColourClick("blue")')
          .canvasColour(style="background:yellow;", onclick='onColourClick("yellow")')
          .canvasColour(style="background:green;", onclick='onColourClick("green")')
          .canvasSticker(style="background:pink;", onclick='onToggleStickers()')
        #stickerContainer.stickerDiv(style="display: none")
          .sticker(onclick='onClickEmoji("laugh")')= "ðŸ˜‚"
          .sticker(onclick='onClickEmoji("cry")')= "ðŸ˜­"
          .sticker(onclick='onClickEmoji("lit")')= "ðŸ”¥"
        #canvasDiv.canvas

        #stickerSizer.stickerSizer(style="display: none")
          .stickerSizerUp(onclick="onStickerSizeChange(1)")= "+"
          .stickerSizerDown(onclick="onStickerSizeChange(-1)")= "-"
      a(href='javascript:void(0);', onclick='clearCanvas()') Clear Drawing

    .modal-footer
      a.modal-action.modal-close.waves-effect.waves-green.btn-flat(href='javascript:void(0);', onclick='onCreatePost()') Post


  script(src='/javascripts/index.js')
